<!DOCTYPE html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />

  <!-- Libs CSS -->

  <link rel="stylesheet" href="../assets/libs/prismjs/themes/prism.css" />
  <link rel="stylesheet" href="../assets/libs/prismjs/plugins/line-numbers/prism-line-numbers.css" />
  <link rel="stylesheet" href="../assets/libs/prismjs/plugins/toolbar/prism-toolbar.css" />
  <link rel="stylesheet" href="../assets/libs/bootstrap-icons/font/bootstrap-icons.css" />
  <link rel="stylesheet" href="../assets/libs/dropzone/dist/dropzone.css" />
  <link href="../assets/libs/@mdi/font/css/materialdesignicons.min.css" rel="stylesheet" />

  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/8.0.0/normalize.css" />

  <!-- Theme CSS -->
  <link rel="stylesheet" href="../assets/css/theme.min.css" />
  <title>User Game | Dashboard </title>
</head>

<body>
  <div id="db-wrapper">
    <!-- navbar vertical -->
    <!-- Sidebar -->
    <nav class="navbar-vertical navbar">
      <div class="nav-scroller">
        <!-- Brand logo -->
        <a class="navbar-brand" href="#">
          <img src="../images/logo.png" alt="" /> <span class="text-white ps-1 "> GAME RPS</span>
        </a>
        <!-- Navbar nav -->
        <ul class="navbar-nav flex-column" id="sideNavbar">
          <li class="nav-item">
            <a class="nav-link has-arrow" href="#">
              <i data-feather="home" class="nav-icon icon-xs me-2"></i>
              Dashboard
            </a>
          </li>

          <!-- Nav item -->
          <li class="nav-item">
            <div class="navbar-heading">Table</div>
          </li>

          <li class="nav-item">
            <a class="nav-link active" href="/user-admin">
              <i class="nav-icon icon-xs me-2 bi bi-table"> </i>
              User game
            </a>
          </li>
          <!-- <li class="nav-item">
            <a class="nav-link" href="/users-biodata/view">
              <i class="nav-icon icon-xs me-2 bi bi-table"> </i>
              User game biodata
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/users-history/view">
              <i class="nav-icon icon-xs me-2 bi bi-table"> </i>
              User game history
            </a>
          </li> -->
        </ul>
      </div>
    </nav>
    <!-- Page content -->
    <div id="page-content">
      <div class="header @@classList">
        <!-- navbar -->
        <nav class="navbar-classic navbar navbar-expand-lg">
          <a id="nav-toggle" href="#"><i data-feather="menu" class="nav-icon me-2 icon-xs"></i></a>

          <!--Navbar nav -->
          <ul class="navbar-nav navbar-right-wrap ms-auto d-flex nav-top-wrap">
            <!-- List -->
            <li class="dropdown ms-2">
              <a class="rounded-circle" href="#" role="button" id="dropdownUser" data-bs-toggle="dropdown"
                aria-haspopup="true" aria-expanded="false">
                <div class="avatar avatar-md avatar-indicators avatar-online">
                  <img alt="avatar" src="../assets/images/avatar/avatar-1.jpg" class="rounded-circle" />
                </div>
              </a>
              <div class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdownUser">
                <div class="px-4 pt-2 pb-0">
                  <div class="lh-1">
                    <h5 class="mb-1"><%= user %> </h5>
                    <a href="#" class="text-inherit fs-6">View my profile</a>
                  </div>
                  <div class="mt-3 mb-2 dropdown-divider"></div>
                </div>

                <ul class="list-unstyled">
                  <li>
                    <a class="dropdown-item" href="#">
                      <i class="me-2 icon-xxs dropdown-item-icon" data-feather="user"></i>Edit Profile
                    </a>
                  </li>

                  <li>
                    <a class="dropdown-item" href="./index.html">
                      <i class="me-2 icon-xxs dropdown-item-icon" data-feather="power"></i>Sign Out
                    </a>
                  </li>
                </ul>
              </div>
            </li>
          </ul>
        </nav>
      </div>
      <!-- Container fluid -->
      <div class="pt-10 bg-primary pb-21"></div>
      <div class="px-6 container-fluid mt-n22">
        <div class="row">
          <div class="col-lg-12 col-md-12 col-12">
            <!-- Page header -->
            <div>
              <div class="d-flex justify-content-between align-items-center">
                <div class="mb-2 mb-lg-0">
                  <h3 class="mb-0 text-white fw-bold">User Game</h3>
                </div>
                <div>
                  <button type="button" class="btn btn-white" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
                    <i class="bi bi-person-plus"></i> User Game</button>
                </div>
              </div>
            </div>
          </div>
        </div>
        <!-- Modal -->
        <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
          aria-labelledby="staticBackdropLabel" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">
                  Form User Game
                </h5>

                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <div class="modal-body">
                <form action="/register-admin" method="POST">
                  <div class="mb-3 row">
                    <label for="Username" class="col-sm-2 col-form-label">Username</label>
                    <div class="col-sm-10">
                      <input type="text" class="form-control" name="username" id="Username" required/>
                    </div>
                  </div>
                  <div class="mb-3 row">
                    <label for="inputPassword3" class="col-sm-2 col-form-label">Password</label>
                    <div class="col-sm-10">
                      <input type="password" class="form-control" id="inputPassword3" minlength="8" name="password" required />
                    </div>
                  </div>
                  <div class="mb-3 row">
                    <label for="Email" class="col-sm-2 col-form-label">Email</label>
                    <div class="col-sm-10">
                      <input type="email" class="form-control" id="Email" name="email" required/>
                    </div>
                  </div>
                  
                  <div class="mb-3 row">
                    <label for="nama" class="col-sm-2 col-form-label">Nama lengkap</label>
                    <div class="col-sm-10">
                      <input type="text" class="form-control" name="nama" id="nama" />
                    </div>
                  </div>
                  <div class="mb-3 row">
                    <label for="tanggal_lahir" class="col-sm-2 col-form-label">Tanggal Lahir</label>
                    <div class="col-sm-10">
                      <input type="date" class="form-control" name="tanggal_lahir" id="tanggal_lahir" />
                    </div>
                  </div>
                  <div class="mb-3 row">
                    <label for="alamat" class="col-sm-2 col-form-label">Alamat</label>
                    <div class="col-sm-10">
                      <input type="text" class="form-control" name="alamat" id="alamat" />
                    </div>
                  </div>
                  <div class="mb-3 row">
                    <label for="notelp" class="col-sm-2 col-form-label">No Telpon</label>
                    <div class="col-sm-10">
                      <input type="text" class="form-control" name="notelp" id="notelp" />
                    </div>
                  </div>
                  <div class="mb-3 row">
                    <label for="Email" class="col-sm-2 col-form-label">User</label>
                    <div class="col-sm-10 ">
                      <div class="pt-2 form-check form-switch">
                        <input class="form-check-input " type="checkbox" name="isAdmin" value="1" id="flexSwitchCheckDefault">
                        <label class="form-check-label " for="flexSwitchCheckDefault"> Admin</label>
                      </div>
                    </div>
                  </div>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                  Close
                </button>
                <input type="submit" class="btn btn-primary" value="Submit">
                </form>
              </div>
            </div>
          </div>
        </div>
        <!-- row  -->
        <div class="mt-6 row">
          <div class="col-md-12 col-12">
            <!-- card  -->
            <div class="card">
              <!-- card header  -->
              <div class="py-4 bg-white card-header border-bottom-0">
                <h4 class="mb-0">Table User Game</h4>
              </div>
              <!-- table  -->
              <div class="table-responsive">
                <table class="table mb-0 text-nowrap">
                  <thead class="table-light">
                    <tr>
                      <th>No.</th>
                      <th>Username</th>
                      <th>Email</th>
                      <th>Action</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% for(let i = 0; i < getUserGame.length ; i++) { %>
                    <tr>
                      <td class="align-start"><%= i+1%></td>
                      <td class="align-middle"><%= getUserGame[i].user_biodata.username %></td>
                      <td class="align-middle"><%= getUserGame[i].user_biodata.email %></td>
                      <td class="align-middle">
                        <a href="<%= `/user-admin/${getUserGame[i].id}` %>"
                           class="btn btn-primary"><i class="bi bi-pencil"></i></a>
                          <button onclick="deleteUser(<%= getUserGame[i].user_biodata.id %>, <%= getUserGame[i].id %>)" class="btn btn-danger"><i class="bi bi-trash"></i></button>
                          <a href="<%= `/user-admin/history/${getUserGame[i].id}` %>" class="btn btn-info">
                            <i class="bi bi-clock-history"></i>
                          </a>
                        
                      </td>
                    </tr>
                    <% }%>
                  </tbody>

                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script>
     function deleteUser(id, idx) {
       let result = confirm(" Yakin hapus user ini?")
       if (result) {
         fetch('/user-admin/delete/' + id +'/'+ idx, {
            method: 'DELETE',
          })
          .then(
            window.location='/user-admin'
          ) // or res.json()
          .then(res => console.log(res))
         
       }
       
     }
  </script>
  <!-- Scripts -->
  <!-- Libs JS -->
  <script src="../assets/libs/jquery/dist/jquery.min.js"></script>
  <script src="../assets/libs/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
  <script src="../assets/libs/jquery-slimscroll/jquery.slimscroll.min.js"></script>
  <script src="../assets/libs/feather-icons/dist/feather.min.js"></script>
  <script src="../assets/libs/prismjs/components/prism-core.min.js"></script>
  <script src="../assets/libs/prismjs/components/prism-markup.min.js"></script>
  <script src="../assets/libs/prismjs/plugins/line-numbers/prism-line-numbers.min.js"></script>
  <script src="../assets/libs/apexcharts/dist/apexcharts.min.js"></script>
  <script src="../assets/libs/dropzone/dist/min/dropzone.min.js"></script>

  <!-- clipboard -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/clipboard.js/1.5.12/clipboard.min.js"></script>

  <!-- Theme JS -->
  <script src="../assets/js/theme.min.js"></script>
</body>

</html>
<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head') %>
  <title>User History</title>
</head>

<body>
  <div id="db-wrapper">
    <!-- navbar vertical -->
    <!-- Sidebar -->
    <nav class="navbar-vertical navbar">
      <div class="nav-scroller">
        <!-- Brand logo -->
        <a class=" navbar-brand" href="./index.html">
          <img src="../images/logo.png" alt="" /> <span class="text-white ps-1 "> GAME RPS</span>
        </a>
        <!-- Navbar nav -->
        <ul class="navbar-nav flex-column" id="sideNavbar">
          <li class="nav-item">
            <a class="nav-link has-arrow" href="#">
              <i data-feather="home" class="nav-icon icon-xs me-2"></i>
              Dashboard
            </a>
          </li>

          <!-- Nav item -->
          <li class="nav-item">
            <div class="navbar-heading">Table</div>
          </li>

          <li class="nav-item">
            <a class="nav-link " href="/user-admin">
              <i class="nav-icon icon-xs me-2 bi bi-table"> </i>
              User game
            </a>
          </li>
         
          
        </ul>
      </div>
    </nav>
    <!-- Page content -->
    <div id="page-content">
      <div class="header @@classList">
        <!-- navbar -->
        <nav class="navbar-classic navbar navbar-expand-lg">
          <a id="nav-toggle" href="#"><i data-feather="menu" class="nav-icon me-2 icon-xs"></i></a>

          <!--Navbar nav -->
          <ul class="navbar-nav navbar-right-wrap ms-auto d-flex nav-top-wrap">
            <!-- List -->
            <li class="dropdown ms-2">
              <a class="rounded-circle" href="#" role="button" id="dropdownUser" data-bs-toggle="dropdown"
                aria-haspopup="true" aria-expanded="false">
                <div class="avatar avatar-md avatar-indicators avatar-online">
                  <img alt="avatar" src="../../assets/images/avatar/avatar-1.jpg" class="rounded-circle" />
                </div>
              </a>
              <div class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdownUser">
                <div class="px-4 pt-2 pb-0">
                  <div class="lh-1">
                    <h5 class="mb-1">John E. Grainger</h5>
                    <a href="#" class="text-inherit fs-6">View my profile</a>
                  </div>
                  <div class="mt-3 mb-2 dropdown-divider"></div>
                </div>

                <ul class="list-unstyled">
                  <li>
                    <a class="dropdown-item" href="#">
                      <i class="me-2 icon-xxs dropdown-item-icon" data-feather="user"></i>Edit Profile
                    </a>
                  </li>

                  <li>
                    <a class="dropdown-item" href="./index.html">
                      <i class="me-2 icon-xxs dropdown-item-icon" data-feather="power"></i>Sign Out
                    </a>
                  </li>
                </ul>
              </div>
            </li>
          </ul>
        </nav>
      </div>
      <!-- Container fluid -->
      <div class="pt-10 bg-primary pb-21"></div>
      <div class="px-6 container-fluid mt-n22">
        <div class="row">
          <div class="col-lg-12 col-md-12 col-12">
            <!-- Page header -->
            <div>
              <div class="d-flex justify-content-between align-items-center">
                <div class="mb-2 mb-lg-0">
                  <h3 class="mb-0 text-white fw-bold">User Game History</h3>
                </div>
               
              </div>
            </div>
          </div>
        </div>
        <!-- Modal -->
        <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
          aria-labelledby="staticBackdropLabel" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">
                  Form User Game History
                </h5>

                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <div class="modal-body">
                <form action="/users-game" method="POST">
                  <div class="mb-3 row">
                    <label for="Username" class="col-sm-2 col-form-label">Username</label>
                    <div class="col-sm-10">
                      <input type="text" class="form-control" name="username" id="Username" />
                    </div>
                  </div>
                  <div class="mb-3 row">
                    <label for="inputPassword3" class="col-sm-2 col-form-label">Password</label>
                    <div class="col-sm-10">
                      <input type="password" class="form-control" id="inputPassword3" minlength="8" name="password" />
                    </div>
                  </div>
                  <div class="mb-3 row">
                    <label for="Email" class="col-sm-2 col-form-label">Email</label>
                    <div class="col-sm-10">
                      <input type="email" class="form-control" id="Email" name="email" />
                    </div>
                  </div>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                  Close
                </button>
                <input type="submit" class="btn btn-primary" value="Submit">
                </form>
              </div>
            </div>
          </div>
        </div>
        <!-- row  -->
        <div class="mt-6 row">
          <div class="col-md-12 col-12">
            <!-- card  -->
            <div class="card">
              <!-- card header  -->
              <div class="py-4 bg-white card-header border-bottom-0">
                <h4 class="mb-0">User Game History</h4>
              </div>
              <!-- table  -->
              <div class="table-responsive">
                <table class="table mb-0 text-nowrap">
                  <thead class="table-light">
                    <tr >
                      <th>No.</th>
                      <th>Username</th>
                      <th>Poin</th>
                      <th>Total Playing</th>
                      
                    </tr>
                  </thead>
                  <tbody>
                    <% if(getGamerHistory == ''){ %> 
                    <tr class="text-center" >
                      <td colspan="4">History Masih Kosong</td>
                    </tr>  

                    <% } else {%>
                    <% for(let i = 0; i < getGamerHistory.length ; i++) { %>
                    <tr >
                      <td ><%= i+1%></td>
                      <td ><%= getGamerHistory[i].user_history.username %></td>
                      <td ><%= getGamerHistory[i].point %></td>
                      <td ><%= getGamerHistory[i].total_play %></td>
                      
                    </tr>
                    <% }%>
                    <% }%>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

     <!-- Scripts -->
    <%- include('../partials/script') %>
</body>

</html>
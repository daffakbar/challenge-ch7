<!DOCTYPE html>
<html lang="en">
  <%- include('partials/head') %>
  <body>
    <div class="container mt-5 d-flex flex-column">
      <div class="row">
        <!-- card -->
        <% allRoom.map((item)=> { %>
        <div class="mb-3 col-xl-3 col-lg-6 col-md-4 col-6">
          <div
            class="mb-3 text-white bg-gradient bg-primary rounded-3"
            style="max-width: 18rem"
          >
            <div class="card-header fs-3">
              <i class="bi bi-controller"></i> <%= item.nama_room %>
            </div>
            <div class="card-body">
              <% if(item.id_player_2){ %>
              <span class="card-title badge rounded-pill bg-success">
                Room Penuh
              </span>
              <p class="card-text">Salin Kode: ####</p>

              <button class="btn btn-success" disabled>Playing...</button>
              <% } else{ %>
              <span class="card-title badge rounded-pill bg-warning">
                Menunggu Player 2 ...
              </span>
              <input
                type="text"
                name="text"
                value="<%= item.kode_unik %>"
                id="kode_unik"
                hidden
              />

              <p class="card-text">
                Salin Kode:
                <button class="btn-primary rounded-pill" onclick="copyCode()">
                  <%= item.kode_unik %>
                </button>
              </p>

              <a href="/room/<%= item.id %>" class="btn btn-success"
                >Join Game
              </a>
              <% } %>
            </div>
          </div>
        </div>
        <% }) %>
        <!-- close card -->
      </div>
    </div>
    <script>
      function copyCode() {
        /* Get the text field */
        var copyText = document.getElementById("kode_unik");

        /* Select the text field */
        copyText.select();
        copyText.setSelectionRange(0, 99999); /* For mobile devices */

        /* Copy the text inside the text field */
        navigator.clipboard.writeText(copyText.value);

        /* Alert the copied text */
        alert("Copied the text: " + copyText.value);
      }
    </script>
  </body>
</html>

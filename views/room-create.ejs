<!DOCTYPE html>
<html lang="en">
  <%- include('partials/head') %>
  <body>
    <div class="container d-flex flex-column">
      <div class="row align-items-center justify-content-center g-0 min-vh-100">
        <div class="py-8 col-12 col-md-8 col-lg-6 col-xxl-4 py-xl-0">
          <!-- Card -->
          <div class="card smooth-shadow-md">
            <!-- Card body -->
            <div class="p-6 card-body">
              <div class="mb-4 text-center">
                <a href="#" class="text-black text-decoration-none important"
                  ><img
                    src="../../images/assets/img/logo.png"
                    class="mb-2"
                    alt=""
                    width="70px"
                  />
                  <span class="text-black fs-3 text-decoration-none"
                    >GAME RPS</span
                  ></a
                >
                <!-- <p class="mb-6">Please Login To C.</p> -->
              </div>
              <!-- Form -->
              <% if(uniqueCode){ %>
              <div class="alert alert-success" role="alert">
                Kode Room Game Anda :
                <input
                  type="text"
                  name="text"
                  value="<%= uniqueCode %>"
                  id="kode_unik"
                  hidden
                />
                <button
                  class="size btn btn-outline-success"
                  onclick="copyCode()"
                >
                  <%= uniqueCode %>
                </button>

                <p class="">
                  <a href="/room/<%= idRoom %>" class="btn btn-outline-primary"
                    >Room validation <i class="bi bi-cursor"></i>
                  </a>
                </p>
              </div>
              <% } %>
              <form action="/room" method="POST">
                <!-- Username -->
                <div class="mb-3">
                  <label for="email" class="form-label">Room Name</label>
                  <input
                    type="text"
                    id="email"
                    class="form-control"
                    name="nama_room"
                    placeholder="Enter room name"
                    required=""
                  />
                </div>
                <div>
                  <!-- Button -->
                  <div class="d-grid">
                    <input
                      type="submit"
                      class="btn btn-primary"
                      value="Create Room"
                    />
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
    <script>
      function copyCode() {
        /* Get the text field */
        var copyText = document.getElementById("kode_unik");

        /* Select the text field */
        copyText.select();
        copyText.setSelectionRange(0, 99999); /* For mobile devices */

        /* Copy the text inside the text field */
        navigator.clipboard.writeText(copyText.value);

        /* Alert the copied text */
        alert("Copied the text: " + copyText.value);
      }
    </script>
